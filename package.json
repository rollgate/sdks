{
  "name": "rollgate-sdks",
  "version": "1.0.0",
  "private": true,
  "description": "Official Rollgate SDKs for feature flags",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rollgate/sdks.git"
  },
  "keywords": [
    "feature-flags",
    "feature-toggles",
    "rollgate",
    "sdk"
  ],
  "author": "Rollgate <info@rollgate.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rollgate/sdks/issues"
  },
  "homepage": "https://rollgate.io",
  "devDependencies": {
    "prettier": "^3.2.5"
  }
}
